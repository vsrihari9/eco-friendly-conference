{
  "name": "node-api-svc-starter",
  "version": "0.0.1",
  "description": "Starter Project for building REST API Microservices using Node.js and Express",
  "author": "Murali <murali@softrams.com>",
  "main": "src/index.js",
  "private": false,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=10",
    "yarn": "*"
  },
  "scripts": {
    "prestart": "yarn --pure-lockfile --production",
    "start": "pm2 start ./src/index.js",
    "docker-start": "NODE_ENV=production pm2-docker start ./src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon ./src/index.js --ignore docs",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts --ignore-pattern **/*.*-test.js",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive 'src/api/**/*.test.js'",
    "test:integration": "cross-env NODE_ENV=integration mocha --timeout 20000 --exit 'src/api/**/*.integration-test.js'",
    "test:watch": "cross-env NODE_ENV=test mocha --watch 'src/api/**/*.test.js'",
    "validate": "yarn lint && yarn test && yarn audit",
    "gen-openapi-v3": "yarn test && npx api-spec-converter --from=swagger_2 --to=openapi_3 --syntax=yaml --order=openapi ./docs/v1/swagger.json >./docs/v1/api.yaml",
    "perf": "./node_modules/artillery/bin/artillery run src/tests/perf/basic.yaml",
    "postpublish": "git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:softrams/node-api-svc-starter.git"
  },
  "keywords": [
    "express",
    "node",
    "micro-services",
    "REST",
    "API",
    "starter"
  ],
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@softrams/nodejs-mysql-connector": "^0.0.6",
    "@softrams/nodejs-oracle-connector": "^0.0.5",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "express-validation": "^3.0.5",
    "flake-idgen": "^1.4.0",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "artillery": "^1.6.0",
    "artillery-plugin-expect": "^1.3.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "express-oas-generator": "^1.0.23",
    "express-openapi-validator": "^3.14.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1",
    "pm2": "^4.2.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.0.0",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn validate"
    }
  }
}
